.chat-side
  .chat-side__header
    .chat-side__header__box
      %p.chat-side__header__box__user-name
        = current_user.name
      %ul.chat-side__header__box__menu 
        %li.chat-side__header__box__menu__new-group 
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'fa')
 
        %li.chat-side__header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'fa')
  .chat-side__groups 
    - current_user.groups.each do |group|
      .chat-side__groups__group
        = link_to group_messages_path(group), class: 'GroupLink' do
          %p.chat-side__groups__group__group-name 
            = group.name
            dd
          %p.chat-side__groups__group__latest-message 
            = group.show_last_message
    